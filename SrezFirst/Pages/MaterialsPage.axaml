<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SrezFirst.MaterialsPage"
             FontFamily="Comic Sans MS">
    <Grid>
        <StackPanel Margin="10">
            <Border Background="#ABCFCE" Height="60" Width="1000" Margin="0,0,0,10">
                <TextBlock Text="Materials Management" FontSize="16" FontWeight="Bold" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <Button Content="Add Material" Name="addMaterial" Click="addMaterial_Click" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            
            <DataGrid Name="dgMaterials" AutoGenerateColumns="False" HorizontalAlignment="Center">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="auto"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding MaterialTypeName}" Width="auto"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice}" Width="auto"/>
                    <DataGridTextColumn Header="In Stock" Binding="{Binding QuantityInStock}" Width="auto"/>
                    <DataGridTextColumn Header="Min Qty" Binding="{Binding MinimumQuantity}" Width="auto"/>
                    <DataGridTextColumn Header="In Package" Binding="{Binding QuantityInPackage}" Width="auto"/>
                    <DataGridTextColumn Header="Unit" Binding="{Binding UnitOfMeasure}" Width="auto"/>
                    <DataGridTextColumn Header="Purchase Cost" Binding="{Binding PurchaseCost}" Width="auto"/>
                    <DataGridTemplateColumn Header="Actions" Width="auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Name="btnEdit" Content="Edit" Margin="2" Tag="{Binding}" Click="btnEdit_Click"/>
                                    <Button Name="btnDelete" Content="Delete" Margin="2" Tag="{Binding}" Click="btnDelete_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>