<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="SrezFirst.AddEditSupplierWindow"
        Title="AddEditSupplierWindow" FontFamily="Comic Sans MS">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Name"/>
            <TextBox Name="nameSupplier" Text="{Binding Name, Mode=TwoWay}"/>
            <Label Name="nameError" Foreground="Red" FontSize="10" Content=""/>
            
            <Label Content="Type"/>
            <ComboBox Name="typeSupplier" DisplayMemberBinding="{Binding Name}"/>
            <Label Name="typeError" Foreground="Red" FontSize="10" Content=""/>
            
            <Label Content="INN"/>
            <TextBox Name="innSupplier" Text="{Binding Inn, Mode=TwoWay}"/>
            <Label Name="innError" Foreground="Red" FontSize="10" Content=""/>
            
            <Label Content="Rating"/>
            <TextBox Name="ratingSupplier" Text="{Binding Rating, Mode=TwoWay}"/>
            <Label Name="ratingError" Foreground="Red" FontSize="10" Content=""/>
            
            <Label Content="Start Date"/>
            <TextBox Name="dateSupplier" Text="{Binding StartDate, Mode=TwoWay}"/>
            <Label Name="dateError" Foreground="Red" FontSize="10" Content=""/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Name="btnClose" Content="Close" Click="btnClose_Click"/>
                <Button Name="btnSave" Content="Save" Click="btnSave_Click" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>